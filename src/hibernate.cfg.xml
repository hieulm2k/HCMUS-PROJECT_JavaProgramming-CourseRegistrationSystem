<?xml version="1.0" encoding="utf-8" standalone="no"?><hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/qldkhp</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username"></property>
        <property name="connection.password"></property>

        <property name="show_sql">true</property>

        <mapping resource="pojo/Classes.hbm.xml"/>
        <mapping resource="pojo/Courses.hbm.xml"/>
        <mapping resource="pojo/Registers.hbm.xml"/>
        <mapping resource="pojo/Semesters.hbm.xml"/>
        <mapping resource="pojo/Sessions.hbm.xml"/>
        <mapping resource="pojo/Subject.hbm.xml"/>
        <mapping resource="pojo/Users.hbm.xml"/>
    </session-factory>
</hibernate-configuration>