<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.ClassCourse" table="class_course" schema="qldkhp" >
        <id name="id">
            <column name="Id" sql-type="int" not-null="true"/>
            <generator class="increment"></generator>
        </id>

        <many-to-one class="pojo.Courses" name="courses" fetch="join" lazy="false" cascade="save-update">
            <column name="CourseId" sql-type="int" not-null="true"/>
        </many-to-one>

        <many-to-one class="pojo.Classes" name="classes" fetch="join" lazy="false" cascade="save-update">
            <column name="ClassId" sql-type="int" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>